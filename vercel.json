{
  "github": {
    "silent": true
  },
  "functions": {
    "src/app/api/mcp/route.ts": {
      "maxDuration": 600
    },
    "src/app/api/sse/route.ts": {
      "maxDuration": 600
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
